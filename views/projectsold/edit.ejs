<%- layout('/layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">This is editing page</h1>
  <div class="col-6 offset-3">
    <form
      action="/project/<%= project.id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="project[title]"
          value="<%= project.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <input type="file" name="image" id="" multiple />
      <div class="mb-3">
        <label class="form-label" for="tags">tags</label>
        <input
          class="form-control"
          type="text"
          id="tags"
          name="project[tags]"
          value="<%=project.location %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="project[image]"
          value="<%=project.image %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="link">link</label>
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            id="link"
            name="project[link]"
            value="<%= project.link %>"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="project[description]"
          required
        >
<%= project.description%></textarea
        >
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
    </form>
    <a href="/project/<%= project._id%>">Back To Campground</a>
  </div>
</div>
